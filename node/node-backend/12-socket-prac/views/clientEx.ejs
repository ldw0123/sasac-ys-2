<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Socket 실습</title>
    <!-- socket.io CDN -->
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <h3>소켓 실습</h3>
    <button onclick="hello()">Hello</button>
    <button onclick="study()">study</button>
    <button onclick="bye()">bye</button><br />
    <div id='abc'></div>

    <script>
      const socket = io();

      function hello() {
        socket.emit("hello", {
          msg: "안녕하세용"
        })
      }
      socket.on("hello2", (res) => {
        document.getElementById("abc").innerHTML = res.msg;
        console.log(res);
      })

      function study() {
        socket.emit("study", {
          msg: "소켓 공부중..."
        })
      }
      socket.on("study2", (res) => {
        document.getElementById("abc").innerHTML = res.msg;
        console.log(res);
      })

      function bye() {
        socket.emit("bye", {
          msg: "안녕히가세여"
        })
      }
      socket.on("bye2", (res) => {
        document.getElementById("abc").innerHTML = res.msg;
        console.log(res);
      })
    </script>
  </body>
</html>